<h1>課本與價格</h1>
<%=link_to "新增" , new_book_path %>
<table>
  <thead>
    <tr>
      <td>書名</td>
      <td>價格</td>
    </tr>
  </thead> 
  <tbody>   
     <% @books.each do |book| %>
    <tr>  
  
      <td><%=book.name%></td>
      <td><%=book.price%></td>
    
      <td><%= link_to "刪除", book_path(book), method:'delete'%>
      <%= link_to "編輯", edit_book_path(book)%></td>
    </tr>

    <% end %>  
  </tbody>  

</table>
